{
  "builds": [
    {
      "src": "api/assistant.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.10"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "api/assistant.py"
    },
    {
      "source": "/(.*\\.(css|js|png|svg|ico))",
      "destination": "/public/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
